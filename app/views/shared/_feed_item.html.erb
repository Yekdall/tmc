<li id="<%= feed_item.id %>">
	<span class="avatar">
		<%= link_to image_tag(feed_item.user.avatar(:micro), class: "feed_item"), feed_item.user %>
	</span>
	<span class="user">
		<%= link_to feed_item.user.name, feed_item.user %>
	</span>
	<span class="content"><%= wrap(feed_item.content) %></span>
	<span class="timestamp">
		Posted <%= time_ago_in_words(feed_item.created_at) %> ago.
	</span>
	<%= render 'shared/delete_micropost', object: feed_item %>
</li>
<script>$(".feed_item").css({height:60})</script>
