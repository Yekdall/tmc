<% @user ||= current_user %>

	<a href="<%= user_path(@user) %>">
		<span class="avatar">
			<%= image_tag @user.avatar.url(:thumb) %>
		</span>
	</a>
	<h1>
		<%= @user.inmo.name %>
	</h1>
	<span>
		<%= link_to "ver mi perfil", @user %>
	</span>
	<span>
		<%= pluralize(@user.microposts.count, "micropost") %>
	</span>
